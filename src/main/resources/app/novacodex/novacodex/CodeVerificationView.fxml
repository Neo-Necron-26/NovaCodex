<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="rootPane" prefHeight="800.0" prefWidth="1400.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1">

   <!-- Фон (такой же, как в других интерфейсах) -->
   <ImageView fitHeight="814.0" fitWidth="1400.0" preserveRatio="true" scaleX="1.01">
      <Image url="@images/role-selection-window.png" />
   </ImageView>

   <!-- Заголовок -->
   <Label layoutX="500" layoutY="40" text="Подтверждение входа"
          style="-fx-text-fill: #a0c7cf;">
      <font>
         <Font name="Calibri" size="40.0" />
      </font>
   </Label>

   <!-- Форма ввода кода -->
   <VBox alignment="CENTER" layoutX="500.0" layoutY="200.0" spacing="20.0">
      <!-- Инструкция -->
      <Label text="Введите 6-значный код с почты"
             style="-fx-text-fill: #a0c7cf; -fx-font-size: 20;">
      </Label>

      <!-- Поле для ввода кода -->
      <TextField promptText="Код подтверждения" prefHeight="50.0" prefWidth="400.0"
                 style="-fx-background-color: #151515; -fx-background-radius: 20; -fx-text-fill: #a0c7cf; -fx-font-size: 20; -fx-padding: 10; -fx-effect: dropshadow(gaussian, #000, 10, 0.5, 0, 5);"/>

      <!-- Кнопка подтверждения -->
      <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="400.0" text="Подтвердить"
              style="-fx-background-color: #151515; -fx-background-radius: 20; -fx-text-fill: #a0c7cf; -fx-font-size: 20; -fx-effect: dropshadow(gaussian, #000, 10, 0.5, 0, 5);"/>
   </VBox>
</AnchorPane>