<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <!-- Фоновое изображение -->
   <ImageView fitHeight="800.0" fitWidth="1400.0" preserveRatio="true">
      <Image url="@images/role-selection-window.png" />
   </ImageView>

   <!-- Затемняющий слой поверх фона -->
   <AnchorPane prefHeight="800.0" prefWidth="1400.0" style="-fx-background-color: rgba(0, 0, 0, 0.6);" />

   <!-- Верхняя панель -->
   <AnchorPane layoutY="0.0" prefHeight="60.0" prefWidth="1400.0" style="-fx-background-color: rgba(30, 30, 30, 0.7);">
      <Label layoutX="20.0" layoutY="15.0" text="Ученик" style="-fx-text-fill: #e0e0e0; -fx-font-weight: bold;">
         <font>
            <Font name="Calibri" size="24.0" />
         </font>
      </Label>
   </AnchorPane>

   <!-- Центральная область с кнопками -->
   <VBox alignment="CENTER" layoutX="550.0" layoutY="150.0" spacing="20" prefWidth="300.0">
      <!-- Кнопки -->
      <Button prefHeight="50.0" prefWidth="300.0"
              text="Создать файл" style="-fx-background-color: rgba(37, 37, 37, 0.8); -fx-text-fill: #e0e0e0; -fx-font-weight: bold; -fx-border-color: #444; -fx-border-width: 1;">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </Button>

      <Button prefHeight="50.0" prefWidth="300.0"
              text="Открыть файл" style="-fx-background-color: rgba(37, 37, 37, 0.8); -fx-text-fill: #e0e0e0; -fx-font-weight: bold; -fx-border-color: #444; -fx-border-width: 1;">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </Button>

      <Button prefHeight="50.0" prefWidth="300.0"
              text="Открыть папку" style="-fx-background-color: rgba(37, 37, 37, 0.8); -fx-text-fill: #e0e0e0; -fx-font-weight: bold; -fx-border-color: #444; -fx-border-width: 1;">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </Button>

      <Button prefHeight="50.0" prefWidth="300.0"
              text="Подключиться к ..." style="-fx-background-color: rgba(37, 37, 37, 0.8); -fx-text-fill: #e0e0e0; -fx-font-weight: bold; -fx-border-color: #444; -fx-border-width: 1;">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </Button>

      <Button prefHeight="50.0" prefWidth="300.0"
              text="Roadmap" style="-fx-background-color: rgba(37, 37, 37, 0.8); -fx-text-fill: #e0e0e0; -fx-font-weight: bold; -fx-border-color: #444; -fx-border-width: 1;">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </Button>

      <!-- Основная кнопка -->
      <Button prefHeight="50.0" prefWidth="300.0"
              text="Загрузить работу" style="-fx-background-color: rgba(48, 48, 48, 0.9); -fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-border-color: #555; -fx-border-width: 1;">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </Button>
   </VBox>
</AnchorPane>